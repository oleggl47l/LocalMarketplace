{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "LocalMarketplaceDb": "Host=localhost;Port=5432;Database=LocalMarketplaceDb;Username=postgres;Password=123Qq123;"
  },
  "AllowedHosts": "*",
  "Serilog": {
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "../Logs/log.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "IdentityServer": {
    "Clients": [
      {
        "ClientId": "default-client",
        "AllowedScopes": [
          "openid",
          "profile",
          "api",
          "offline_access",
          "IdentityServerApi"
        ],
        "AccessTokenLifetime": 3600
      }
    ]
  },
  "JwtAuthenticationOptions":{
    "Authority":"http://localhost:5001"
  },
  "SwaggerDocOptions": {
    "Name": "v1",
    "Version": "v1.0.0",
    "Title": "LocMp.Identity.Api",
    "Description": "Identity microservice for Local Marketplace",
    "Servers": [
      {
        "Url": "http://localhost:5001",
        "Description": "Local Development"
      }
    ]
  }
}
